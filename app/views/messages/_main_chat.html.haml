  .footer
    = form_with model: [@group, @message], html: {class: "form"}, local: true do |f|
      .form1
        = f.text_field :content, class: 'form1content', placeholder: 'type a message'
        = f.label :image, class: 'form1icon' do
          = icon('far', 'image', class: "form2icon")
          = f.file_field :image, class: 'top-items__icon__a'
      = f.submit 'Send', class: 'form2'
      