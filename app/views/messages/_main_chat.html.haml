.chat
  .header
    .header__group
      .header__groupname
        = @group.name
      %ul.header__memberlist
        Member:
        %li.header__membername
          - @group.users.each do |user|
            =user.name
    .header__edit
      -# =link_to "#", class: "heder__editlink" do
      -#   Edit
      =link_to 'Edit', edit_group_path(@group),class: 'heder__editlink'
  .messagefield
    = render @messages
