.SideBar
  .SideBar__user-name
    .top-items
      .top-items__name
        = current_user.name
      .top-items__icon
        
        .top-items__icon__a
          = link_to new_group_path(current_user) do
            = icon('fas', 'edit')
        
        .top-items__icon__b
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
          
  .SideBar__grouplist
    -# .group
    -#   =link_to "#", class: "group__name" do
    -#     名前
    -#   =link_to "#", class:"group__message" do
    -#     こんにちは
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message   


        